<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.EditmovieActivity"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/dark2_blue"
                android:layout_gravity="center_horizontal"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="360dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:hint="Title"
                        app:startIconTint="@color/teal_200"
                        app:startIconDrawable="@drawable/icon_title"
                        android:textColorHint="@color/white"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeColor="@color/teal_200">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/titleInput"
                            android:layout_width="360dp"
                            android:layout_height="70dp"
                            android:background="@color/grey"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:paddingLeft="20dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="360dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:hint="Detail"
                        android:textColorHint="@color/white"
                        app:startIconTint="@color/teal_200"
                        app:startIconDrawable="@drawable/icon_detail"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeColor="@color/teal_200">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/detailInput"
                            android:layout_width="360dp"
                            android:layout_height="150dp"
                            android:textSize="15sp"
                            android:background="@color/grey"
                            android:textStyle="bold"
                            android:paddingLeft="20dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="360dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:hint="Director"
                        app:startIconTint="@color/teal_200"
                        app:startIconDrawable="@drawable/director_chair"
                        android:textColorHint="@color/white"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeColor="@color/teal_200">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/directorInput"
                            android:layout_width="360dp"
                            android:layout_height="70dp"
                            android:background="@color/grey"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:paddingLeft="20dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="360dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:hint="Rate"
                        app:startIconTint="@color/teal_200"
                        app:startIconDrawable="@drawable/star2"
                        android:textColorHint="@color/white"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeColor="@color/teal_200">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/rateInput"
                            android:layout_width="360dp"
                            android:layout_height="70dp"
                            android:background="@color/grey"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:paddingLeft="20dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="170dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:hint="Duration"
                            app:startIconTint="@color/teal_200"
                            app:startIconDrawable="@drawable/icon_hours"
                            android:textColorHint="@color/white"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeColor="@color/teal_200">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/durationInput"
                                android:layout_width="340dp"
                                android:layout_height="70dp"
                                android:background="@color/grey"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:paddingLeft="20dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="170dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:hint="Genre"
                            app:startIconTint="@color/teal_200"
                            app:startIconDrawable="@drawable/genre"
                            android:textColorHint="@color/white"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeColor="@color/teal_200"
                            android:layout_marginLeft="20dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/genreInput"
                                android:layout_width="340dp"
                                android:layout_height="70dp"
                                android:background="@color/grey"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:paddingLeft="20dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:backgroundTint="@color/grey">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Image"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/montserrat_bold"

                                />

                            <androidx.cardview.widget.CardView
                                android:layout_width="240dp"
                                android:layout_height="240dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="20dp"
                                android:backgroundTint="@color/dark2_blue"
                                app:cardCornerRadius="10dp">
                                <ImageView
                                    android:id="@+id/picturePreview"
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:scaleType="fitXY"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="20dp"/>
                            </androidx.cardview.widget.CardView>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/imageButton"
                                android:layout_width="150dp"
                                android:layout_height="40dp"
                                android:background="@color/light_blue"
                                android:layout_marginTop="10dp"
                                android:text="Choose File"
                                android:textColor="@color/white"
                                android:fontFamily="@font/montserrat_bold"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="20dp"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/updateButton"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button"
                    android:layout_marginTop="950dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Update"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_extrabold"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>